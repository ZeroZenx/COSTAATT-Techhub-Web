// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  // Role stored as string: STUDENT | TEACHER | ADMIN | VENDOR
  role          String    @default("STUDENT")
  school        String?
  grade         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  bookings      Booking[]
  submissions   Submission[]
  badges        UserBadge[]
  quizAttempts  QuizAttempt[]
  pollResponses PollResponse[]
}

model Booking {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventId     String?
  event       Event?   @relation(fields: [eventId], references: [id], onDelete: SetNull)
  date        DateTime
  timeSlot    String
  school      String
  studentCount Int
  // Status stored as string: PENDING | CONFIRMED | CANCELLED | COMPLETED
  status      String   @default("PENDING")
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  // Event type stored as string: WORKSHOP | DEMO | TOUR | VENDOR_SESSION | CHALLENGE
  type        String
  vendorId    String?
  vendor      Vendor?  @relation(fields: [vendorId], references: [id], onDelete: SetNull)
  startDate   DateTime
  endDate     DateTime
  maxCapacity Int
  currentCapacity Int @default(0)
  location    String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  bookings    Booking[]
  rsvps       RSVP[]
}

model Vendor {
  id          String   @id @default(cuid())
  name        String
  company     String?
  bio         String
  imageUrl    String?
  videoUrl    String?
  expertise   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  events      Event[]
}

model RSVP {
  id          String   @id @default(cuid())
  userId      String
  eventId     String
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  // RSVP status stored as string: CONFIRMED | CANCELLED
  status      String   @default("CONFIRMED")
  createdAt   DateTime @default(now())
}

model Badge {
  id          String   @id @default(cuid())
  name        String   @unique
  description String
  icon        String
  // Badge category stored as string: EXPLORER | CREATOR | INNOVATOR | COLLABORATOR | EXPERT
  category    String
  createdAt   DateTime @default(now())
  
  users       UserBadge[]
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badgeId   String
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  earnedAt  DateTime @default(now())
  
  @@unique([userId, badgeId])
}

model Challenge {
  id          String   @id @default(cuid())
  title       String
  description String
  // Challenge type stored as string: AR_VR | CODING | IOT | DESIGN | QUIZ
  type        String
  points      Int      @default(10)
  // Optional badge association stored as badgeId string
  badgeId     String?
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Submission {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  challengeId String?
  title       String
  description String
  // Submission type stored as string: DESIGN_3D | AI_DEMO | VR_SKETCH | CODE_PROJECT | OTHER
  type        String
  fileUrl     String?
  imageUrl    String?
  videoUrl    String?
  isFeatured  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Quiz {
  id          String   @id @default(cuid())
  title       String
  description String
  questions   String   // JSON string of questions
  points      Int      @default(10)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  attempts    QuizAttempt[]
}

model QuizAttempt {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  quizId      String
  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  score       Int
  totalScore  Int
  answers     String   // JSON string of answers
  completedAt DateTime @default(now())
}

model Poll {
  id          String   @id @default(cuid())
  question    String
  options     String   // JSON string of options
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  responses   PollResponse[]
}

model PollResponse {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  pollId      String
  poll        Poll     @relation(fields: [pollId], references: [id], onDelete: Cascade)
  option      String
  createdAt   DateTime @default(now())
  
  @@unique([userId, pollId])
}

model Leaderboard {
  id          String   @id @default(cuid())
  userId      String
  userName    String
  school      String?
  points      Int      @default(0)
  badgesCount Int     @default(0)
  updatedAt   DateTime @updatedAt
  
  @@unique([userId])
}

